<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">

	<application>
		<resource-bundle>
			<base-name>i18n</base-name>
			<var>i18n</var>
		</resource-bundle>
		<message-bundle>i18n</message-bundle>
		<locale-config>
			<default-locale>en_US</default-locale>
			<supported-locale>pt_BR</supported-locale>
		</locale-config>

		<factory>
			<exception-handler-factory>net.kallx.portal.exception.handler.KallxExceptionHandlerFactory</exception-handler-factory>
		</factory>

	</application>
	
	<converter>
    <description>A converter for Date to Calendar</description>
    <converter-id>dateCalendarConverter</converter-id>
    <converter-class>
        net.kallx.utils.date.DateCalendarConverter
    </converter-class>
</converter>

</faces-config>